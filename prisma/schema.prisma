datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                         Int     @id @default(autoincrement())
  uid                        String  @unique
  email                      String  @unique
  name                       String
  os                         String
  byFind                     String
  stripe_customer_id         String? @unique
  stripe_checkout_status     String? // 初回のcheckoutのステータス
  stripe_subscription_status String? // subscriptionの更新ステータス
  slack_user_id              String? @unique
}
